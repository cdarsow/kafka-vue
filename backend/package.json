{
  "name": "kafka-vue-backend",
  "version": "1.0.0",
  "description": "Backend server with Express, TypeScript, and WebSocket support",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "producer": "KAFKAJS_NO_PARTITIONER_WARNING=1 ts-node src/producer.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "websocket",
    "kafka"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.9.0",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0"
  }
}